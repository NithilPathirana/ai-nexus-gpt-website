// Prisma schema for AI Nexus GPT (Neon Postgres)
// This schema supports:
// 1) NextAuth (Prisma Adapter tables)
// 2) Onboarding leads (email/WhatsApp/country/timezone)
// 3) Admin-created onboarding call slots (Slot)
// 4) Bookings (lead picks a slot)
//
// Notes:
// - Dates are stored in UTC in the DB.
// - Timezone is stored for display purposes.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// -----------------------------
// NextAuth (Prisma Adapter)
// -----------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  selectedPoolId String?
  selectedPool   AccountPool? @relation(fields: [selectedPoolId], references: [id])

  subscription     Subscription?
  kycRecord        KycRecord?
  policyAcceptance PolicyAcceptance?

  bookings Booking[]
  poolSlot PoolSlot?
  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -----------------------------
// Onboarding funnel
// -----------------------------

model OnboardingLead {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String
  country   String
  timezone  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model Slot {
  id       String   @id @default(cuid())
  startsAt DateTime
  endsAt   DateTime
  isActive Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]

  @@index([startsAt])
}

model Booking {
  id String @id @default(cuid())

  // user-booking (logged-in booking/create route)
  userId String?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  // required by availability system
  date      DateTime
  durationM Int
  status    String @default("BOOKED")

  // lead-based booking (onboarding flow) kept
  slotId String?
  slot   Slot? @relation(fields: [slotId], references: [id], onDelete: Cascade)

  leadId String?
  lead   OnboardingLead? @relation(fields: [leadId], references: [id], onDelete: Cascade)

  timezone String?

  zoomJoinUrl   String?
  zoomMeetingId String?
  zoomPasscode  String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([date])
  @@index([leadId])
}


// -----------------------------
// Admin settings + future features
// -----------------------------

model AdminSetting {
  id String @id @default(cuid())

  zoomRecurringLink   String  @default("")
  graceAccessAllowed  Boolean @default(true)

  // availability rules (used by lib/availability.ts)
  allowedDaysCsv      String  @default("1,2,3,4,5,6,7") // Mon=1 ... Sun=7
  bookingDurationM    Int     @default(30)
  bufferMinutes       Int     @default(10)
  dailyStartHour      Int     @default(9)
  dailyEndHour        Int     @default(17)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AccountPool {
  id         String   @id @default(cuid())
  name       String
  totalSlots Int      @default(10)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  slots PoolSlot[]

  selectedByUsers User[]
}

model PoolSlot {
  id          String   @id @default(cuid())
  poolId      String
  label       String   @default("")
  isAvailable Boolean  @default(true)

  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pool AccountPool @relation(fields: [poolId], references: [id], onDelete: Cascade)

  @@unique([poolId, label])
}

model PolicyAcceptance {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  termsVersion   String
  privacyVersion String
  usageVersion   String
  refundsVersion String
  ipAddress      String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model KycRecord {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName  String
  nicLast4  String
  verified  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  trialEndsAt DateTime?
  status           String   @default("trial") // trial | active | past_due | canceled etc.
  paymentDemandedAt DateTime?
  graceEndsAt      DateTime?
  payherePaymentLink String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
