// Prisma schema for AI Nexus GPT (Neon Postgres)
//
// This schema supports:
// 1) NextAuth (Prisma Adapter tables)
// 2) Onboarding leads (email/WhatsApp/country/timezone)
// 3) Admin-created onboarding call slots (Slot)
// 4) Bookings (lead picks a slot)
//
// Notes:
// - Dates are stored in UTC in the DB.
// - Timezone is stored for display purposes.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// -----------------------------
// NextAuth (Prisma Adapter)
// -----------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -----------------------------
// Onboarding funnel
// -----------------------------

model OnboardingLead {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String
  country   String
  timezone  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model Slot {
  id       String   @id @default(cuid())
  startsAt DateTime
  endsAt   DateTime
  isActive Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]

  @@index([startsAt])
}

model Booking {
  id String @id @default(cuid())

  slotId String @unique
  slot   Slot   @relation(fields: [slotId], references: [id], onDelete: Cascade)

  leadId String
  lead   OnboardingLead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  // Stored for display (useful when emailing user)
  timezone String?

  // Optional Zoom details (you can fill these later)
  zoomJoinUrl   String?
  zoomMeetingId String?
  zoomPasscode  String?

  createdAt DateTime @default(now())

  @@index([leadId])
}

// -----------------------------
// Admin settings + future features
// -----------------------------

model AdminSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model AccountPool {
  id         String   @id @default(cuid())
  name       String
  totalSlots Int      @default(10)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  slots PoolSlot[]
}

model PoolSlot {
  id          String   @id @default(cuid())
  poolId      String
  label       String
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pool AccountPool @relation(fields: [poolId], references: [id], onDelete: Cascade)

  @@unique([poolId, label])
}
